---
import GHIcon from "../svg/GHIcon.astro";
import Anchor from "./Anchor.astro";

import { projects } from "../projects";
---

<section class="section_projects">
  {
    projects.map((e) => (
      <section>
        <picture>
          <a href={e.link}>
            <img src={e.preview} alt="as" />
          </a>
        </picture>

        <section id="section_project_info">
          <div id="div_content_link_project">
            <Anchor
              target="_blank"
              id="anchor_link_project"
              value={e.name}
              href={e.page}
            />
          </div>

          <div id="div_project_description">
            <p>{e.description}</p>
          </div>

          <a href={e.link} target="_blank" class="github_link">
            <GHIcon /> Source code
          </a>
        </section>
      </section>
    ))
  }
</section>

<style>
  .github_link {
    background-color: #000;
    color: #fff;
    padding: 10px;
    border-radius: 5px;

    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }
  #div_content_link_project {
    text-align: center;
  }

  .section_projects {
    margin: 50px 0;

    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    place-content: center;
    place-items: center;
  }

  #div_project_description > p {
    font-size: 16px;
  }

  .section_projects > section {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    width: 300px;
    background-color: rgb(20 20 20);
    border-radius: 10px;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: auto;
    border-radius: inherit;
    transition: ease 0.5s;
  }

  #anchor_link_project {
    background: #454545ab;
    padding: 10px;
    border-radius: 10px;
    text-align: center;

    transition: ease 0.5s;
  }

  a:hover {
    filter: opacity(70%);
  }

  #section_project_info {
    padding: 10px;

    display: flex;
    flex-direction: column;

    gap: 1rem;
  }

  footer {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
</style>
